{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "940px",
      "wideSize": "1100px"
    },
    "color": {
      "palette": [
        {
          "slug": "green-pantone",
          "color": "#55A752",
          "name": "Primary Green"
        },
        {
          "slug": "green-forest",
          "color": "#00340E",
          "name": "Secondary Green"
        },
        {
          "slug": "acid-green",
          "color": "#BDC532",
          "name": "Acid Green"
        },
        {
          "slug": "davys-grey",
          "color": "#5C5C5C",
          "name": "Secondary davys"
        },
        {
          "slug": "erie-black",
          "color": "#131313",
          "name": "Eerie Black"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Inter', sans-serif",
          "slug": "inter",
          "name": "Body - Inter",
          "fontFace": [
            {
              "fontFamily": "'Inter', sans-serif",
              "fontWeight": "300",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:/assets/fonts/inter/Inter-Light.ttf"]
            },
            {
              "fontFamily": "'Inter', sans-serif",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/inter/Inter-Regular.ttf"]
            }
          ]
        },
        {
          "fontFamily": "Stolzl, Arial, sans-serif",
          "slug": "stolzl",
          "name": "Headings - Stolzl",
          "fontFace": [
            {
              "fontFamily": "'Stolzl', sans-serif",
              "fontWeight": "800",
              "src": ["file:./assets/fonts/stolzl/Stolzl-Bold.ttf"]
            },
            {
              "fontFamily": "'Stolzl', sans-serif",
              "fontWeight": "700",
              "src": ["file:./assets/fonts/stolzl/Stolzl-Book.ttf"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.64rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "0.8rem",
          "name": "Medium"
        },
        {
          "slug": "regular",
          "size": "1rem",
          "name": "Regular"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.75",
      "fontSize": "1rem"
    },
    "elements": {
        "h1": {
            "typography": {
                "fontFamily": "var(--wp--preset--font-family--stolzl)"
            }
        }
    }
  }
}
